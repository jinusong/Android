<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="10dp">

<RelativeLayout
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#AAAAAA"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/week_meal_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="월요일"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:textColor="#AAAAAA"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_meal_content_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11월 7일"
        android:layout_toRightOf="@id/week_meal_content"
        android:layout_alignBaseline="@id/week_meal_content"
        android:textSize="15dp"/>

    <TextView
        android:textColor="#AAAAAA"
        android:id="@+id/text_meal_content_year"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_below="@id/week_meal_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:background="#B8E8D7"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="아침"/>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:id="@+id/text_meal_content_breakfast"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:background="#B8E8D7"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="점심"/>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:id="@+id/text_meal_content_lunch"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="5dp"
                    android:background="#B8E8D7"
                    android:layout_height="match_parent"/>

                <TextView
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="저녁"/>

            </LinearLayout>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:id="@+id/text_meal_content_dinner"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>